---
// src/Components/Projects/TopographicSection.astro
interface Props {
  title: string;
  image: string;
  dataReadout?: string;
}

const { title, image, dataReadout } = Astro.props;
---

<div class="topographic-section">
  <span class="subtitle">{title}</span>
  
  <div class="topo-map-container">
    <img 
      src={image} 
      alt="Rilievo topografico del progetto"
      class="topo-image"
      loading="lazy"
    />
    
    {dataReadout && (
      <div class="map-overlay-ui">
        <div class="map-data-readout">{dataReadout}</div>
      </div>
    )}
  </div>
</div>

<style>
  .topographic-section {
    margin-top: 4rem;
    margin-bottom: 4rem;
  }
  
  .topo-map-container {
    position: relative;
    width: 100%;
    height: 500px;
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
    overflow: hidden;
    margin-top: 2rem;
  }
  
  .topo-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%) brightness(0.4) contrast(1.2);
  }
  
  .map-overlay-ui {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.5rem;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    pointer-events: none;
  }
  
  .map-data-readout {
    font-family: 'Courier New', monospace;
    font-size: 0.85rem;
    color: var(--nova-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 700;
  }
  
  @media (max-width: 768px) {
    .topo-map-container {
      height: 350px;
    }
    
    .map-data-readout {
      font-size: 0.7rem;
    }
  }
</style>



