---
import type { Project } from '../../data/projectsData';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<a href={`/realizzazioni/${project.slug}`} class="project-item grid-card" data-category={project.category}>
  <div class="grid-media">
    <img
      src={project.thumbnail}
      alt={project.title}
      loading="lazy"
      decoding="async"
      class="grid-img"
    />
  </div>

  <div class="grid-body">
    <h3 class="grid-title">{project.title}</h3>
    <p class="grid-excerpt">{project.excerpt}</p>
    <div class="grid-meta">
      <span class="grid-cta">VEDI PROGETTO â†’</span>
      <span class="grid-year">{project.year}</span>
    </div>
  </div>
</a>

<style>
  .grid-card {
    display: block;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(255, 255, 255, 0.02);
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    transition: transform 0.25s ease, border-color 0.25s ease, background 0.25s ease;
  }

  .grid-card:hover {
    transform: translateY(-2px);
    border-color: rgba(205, 92, 47, 0.22);
    background: rgba(255, 255, 255, 0.03);
  }

  .grid-media {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 3;
    overflow: hidden;
  }

  .grid-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(0.85) brightness(0.72);
    transform: scale(1.03);
    transition: filter 0.35s ease, transform 0.35s ease;
    display: block;
  }

  .grid-card:hover .grid-img {
    filter: saturate(1) brightness(0.82);
    transform: scale(1.06);
  }

  .grid-body {
    padding: 1.15rem 1.15rem 1rem 1.15rem;
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .grid-title {
    margin: 0;
    font-size: 1.05rem;
    font-weight: 600;
    color: white;
    line-height: 1.2;
  }

  .grid-excerpt {
    margin: 0;
    color: var(--nova-muted);
    font-size: 0.95rem;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .grid-meta {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    padding-top: 0.85rem;
  }

  .grid-cta {
    font-size: 0.75rem;
    text-transform: uppercase;
    color: var(--nova-accent);
    font-weight: 800;
    letter-spacing: 0.1em;
  }

  .grid-year {
    font-size: 0.75rem;
    text-transform: uppercase;
    color: var(--nova-muted);
    letter-spacing: 0.1em;
  }
</style>

