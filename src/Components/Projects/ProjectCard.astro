---
// src/Components/Projects/ProjectCard.astro
import type { Project } from '../../data/projectsData';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<a 
  href={`/realizzazioni/${project.slug}`}
  class="project-item"
  data-category={project.category}
>
  <div class="parallax-wrapper">
    <img 
      src={project.thumbnail} 
      alt={project.title}
      class="project-img parallax-img" 
      data-speed="0.1"
      loading="lazy"
    />
  </div>
  
  <div class="project-info">
    <div class="project-content">
      <h3 class="project-title">{project.title}</h3>
      <p class="project-excerpt">{project.excerpt}</p>
    </div>
    <div class="project-meta-container">
      <span class="project-meta">VEDI PROGETTO â†’</span>
      <span class="project-year">{project.year}</span>
    </div>
  </div>
</a>

<style>
  .project-item {
    margin-bottom: 8rem;
    text-decoration: none;
    display: block;
    cursor: pointer;
  }
  
  .parallax-wrapper {
    overflow: hidden;
    width: 100%;
    height: 70vh;
    min-height: 500px;
  }
  
  .project-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(0.8) brightness(0.9);
    transition: filter 0.6s ease, transform 0.1s linear;
  }
  
  .project-item:hover .project-img {
    filter: saturate(1.1) brightness(1);
  }
  
  .project-info {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 1rem;
    gap: 2rem;
  }
  
  .project-content {
    flex: 1;
  }
  
  .project-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--nova-text);
    margin-bottom: 0.75rem;
    transition: color 0.3s ease;
  }
  
  .project-item:hover .project-title {
    color: white;
  }
  
  .project-excerpt {
    font-size: 1rem;
    color: var(--nova-muted);
    line-height: 1.6;
  }
  
  .project-meta-container {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.5rem;
  }
  
  .project-meta {
    font-size: 0.8rem;
    text-transform: uppercase;
    color: var(--nova-accent);
    font-weight: 700;
    letter-spacing: 0.1em;
    transition: transform 0.3s ease;
  }
  
  .project-item:hover .project-meta {
    transform: translateX(5px);
  }
  
  .project-year {
    font-size: 0.75rem;
    text-transform: uppercase;
    color: var(--nova-muted);
    letter-spacing: 0.1em;
  }
  
  @media (max-width: 768px) {
    .project-item {
      margin-bottom: 4rem;
    }
    
    .parallax-wrapper {
      height: 50vh;
      min-height: 300px;
    }
    
    .project-info {
      flex-direction: column;
      gap: 1rem;
    }
    
    .project-meta-container {
      align-items: flex-start;
    }
    
    .project-title {
      font-size: 1.4rem;
    }
    
    .project-excerpt {
      font-size: 0.9rem;
    }
  }
</style>



