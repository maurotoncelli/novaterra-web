---
import { certifications } from '../../data/homeContent';
import SectionHeader from '../ui/SectionHeader.astro';
---
<section class="container mx-auto px-[5vw] mt-32 pt-16 border-t border-white/10 relative z-10">
    
    <SectionHeader subtitle="Standard" title="Certificazioni e Sicurezza">
        <p class="mt-4 text-nova-muted text-[1.1rem] font-light">
            Per lavorare con enti pubblici servono standard documentati.
        </p>
    </SectionHeader>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-6 gap-[1px] bg-white/10 border border-white/10 reveal-fx">
        {certifications.map(cert => (
            <div class="bg-nova-bg p-8 hover:bg-nova-surface transition-colors duration-300 flex flex-col justify-center items-center text-center h-full">
                <span class="text-nova-accent font-extrabold text-lg tracking-wider mb-2">{cert.code}</span>
                <span class="text-white text-sm">{cert.name}</span>
            </div>
        ))}
    </div>
</section>