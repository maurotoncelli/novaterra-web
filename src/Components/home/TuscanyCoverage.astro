---
// src/Components/home/TuscanyCoverage.astro
import TuscanyMap from '../Ui/TuscanyMap.astro';
---

<section class="container mx-auto px-[5vw] mt-32 relative z-10">
  <div class="coverage-grid">
    <div class="coverage-copy reveal-fx">
      <span class="coverage-kicker">Territorio</span>
      <h3 class="coverage-title">
        Qui Ã¨ casa nostra.<br />
        <span class="coverage-accent">Toscana.</span>
      </h3>
      <p class="coverage-desc">
        Siamo basati in Valdera e lavoriamo principalmente in Toscana, ma siamo disponibili in tutta Italia. Cantieri privati, agricoli e opere tecniche:
        precisione, metodo e rispetto del paesaggio.
      </p>
    </div>

    <div class="coverage-map reveal-fx">
      <TuscanyMap className="tuscany-map--compact" />
    </div>
  </div>
</section>

<style>
  .coverage-grid {
    display: grid;
    gap: 3rem;
    align-items: center;
  }

  .coverage-kicker {
    display: inline-block;
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    font-weight: 800;
    color: var(--nova-accent);
    margin-bottom: 1rem;
  }

  .coverage-title {
    margin: 0;
    font-size: clamp(2.05rem, 3.2vw, 2.75rem);
    font-weight: 600;
    line-height: 1.12;
    letter-spacing: -0.01em;
    color: white;
  }

  .coverage-accent {
    color: var(--nova-accent);
  }

  .coverage-desc {
    margin-top: 1.25rem;
    margin-bottom: 0;
    max-width: 58ch;
    color: var(--nova-muted);
    font-size: 1.02rem;
    line-height: 1.7;
    font-weight: 300;
  }

  .coverage-map {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    max-width: 560px;
    justify-self: start;
  }

  @media (min-width: 1024px) {
    .coverage-grid {
      grid-template-columns: 1.2fr 0.9fr;
      gap: 2.75rem;
    }
  }

  @media (max-width: 768px) {
    .coverage-map {
      justify-content: flex-start;
    }
  }
</style>

