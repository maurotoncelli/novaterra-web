---
// src/Components/home/HomeLatestProject.astro
import SectionHeader from '../Ui/SectionHeader.astro';
import { getLatestProject } from '../../lib/projectsRepository';

const latestProject = getLatestProject();

function formatItDate(iso: string): string {
  const d = new Date(iso);
  if (Number.isNaN(d.getTime())) return iso;
  return d.toLocaleDateString('it-IT', { day: '2-digit', month: 'short', year: 'numeric' });
}
---

{latestProject && (
  <section class="container mx-auto px-[5vw] mt-32 relative z-10">
    <SectionHeader subtitle="Realizzazioni" title="L’ultimo lavoro pubblicato.">
      <p class="mt-6 mx-auto text-center text-nova-muted text-[1.05rem] font-light leading-[1.7] max-w-[58ch]">
        Un’anteprima dal campo: dettagli, contesto e risultati. Sfoglia tutte le realizzazioni per vedere metodi, mezzi e soluzioni applicate ai cantieri.
      </p>
    </SectionHeader>

    <article class="latest-project-card reveal-fx">
      <a class="latest-project-media" href={`/realizzazioni/${latestProject.slug}`} aria-label={`Apri: ${latestProject.title}`}>
        <img
          src={latestProject.thumbnail}
          alt={latestProject.title}
          class="latest-project-img parallax-img"
          data-speed="0.08"
          loading="lazy"
          decoding="async"
          sizes="100vw"
        />
        <div class="latest-project-overlay"></div>
      </a>

      <div class="latest-project-body">
        <div class="latest-project-meta">
          <span class="latest-project-kicker">Ultimo progetto</span>
          <div class="latest-project-dates">
            <time class="latest-project-date" datetime={latestProject.publishedAt}>
              Pubblicato {formatItDate(latestProject.publishedAt)}
            </time>
            <span class="latest-project-year">Anno lavoro {latestProject.year}</span>
          </div>
        </div>

        <h3 class="latest-project-title">{latestProject.title}</h3>
        <p class="latest-project-excerpt">{latestProject.excerpt}</p>

        <div class="latest-project-cta">
          <a class="btn-minimal" href={`/realizzazioni/${latestProject.slug}`}>Vedi questo progetto →</a>
          <a class="btn-outline" href="/realizzazioni">Tutte le realizzazioni</a>
        </div>
      </div>
    </article>
  </section>
)}

<style>
  .latest-project-card {
    display: grid;
    gap: 2.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 2.5rem;
  }

  .latest-project-media {
    position: relative;
    display: block;
    width: 100%;
    height: clamp(320px, 48vh, 560px);
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.02);
    text-decoration: none;
  }

  .latest-project-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.75) contrast(1.05);
    transform: scale(1.1);
    will-change: transform;
    transition: filter 500ms ease;
  }

  .latest-project-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(18, 17, 16, 0.15), rgba(18, 17, 16, 0.55));
    pointer-events: none;
  }

  .latest-project-media:hover .latest-project-img {
    filter: brightness(0.9) contrast(1.08);
  }

  .latest-project-body {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .latest-project-meta {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 1rem;
  }

  .latest-project-kicker {
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    font-weight: 800;
    color: var(--nova-accent);
  }

  .latest-project-dates {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.35rem;
  }

  .latest-project-date,
  .latest-project-year {
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: rgba(234, 232, 227, 0.7);
  }

  @media (max-width: 768px) {
    .latest-project-dates {
      align-items: center;
    }
  }

  .latest-project-title {
    font-size: clamp(1.6rem, 2.2vw, 2.2rem);
    font-weight: 600;
    color: var(--nova-text);
    margin: 0;
    line-height: 1.15;
    letter-spacing: -0.01em;
  }

  .latest-project-excerpt {
    margin: 0;
    color: var(--nova-muted);
    line-height: 1.7;
    font-size: 1.02rem;
    max-width: 70ch;
  }

  .latest-project-cta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.25rem 1.75rem;
    align-items: center;
    margin-top: 0.5rem;
  }

  .btn-outline {
    display: inline-block;
    border: 1px solid rgba(205, 92, 47, 0.65);
    color: var(--nova-accent);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-weight: 800;
    font-size: 0.8rem;
    padding: 0.95rem 1.4rem;
    transition: all 250ms ease;
  }

  .btn-outline:hover {
    background: var(--nova-accent);
    color: white;
    border-color: var(--nova-accent);
  }

  @media (min-width: 1024px) {
    .latest-project-card {
      grid-template-columns: 1.4fr 1fr;
      align-items: start;
      gap: 3.5rem;
    }
  }
</style>

