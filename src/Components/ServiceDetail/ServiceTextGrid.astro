---
// src/Components/ServiceDetail/ServiceTextGrid.astro
interface Props {
  introParagraph: string;
  bodyParagraph: string;
}

const { introParagraph, bodyParagraph } = Astro.props;
---

<div class="service-text-grid">
  <div class="text-content">
    <p class="intro-text">{introParagraph}</p>
    <p class="body-text">{bodyParagraph}</p>
  </div>
  
  <slot />
</div>

<style>
  .service-text-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
    margin-bottom: 6rem;
  }
  
  .text-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  
  .intro-text {
    font-size: 1.2rem;
    color: white;
    font-weight: 400;
    line-height: 1.6;
    margin: 0 0 2rem 0;
  }
  
  .body-text {
    font-size: 1rem;
    color: var(--nova-muted);
    line-height: 1.8;
    margin: 0;
  }
  
  /* Desktop: 2 colonne (testo | card) */
  @media (min-width: 900px) {
    .service-text-grid {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }
  }
  
  /* Mobile: 1 colonna (testo sopra, card sotto) */
  @media (max-width: 899px) {
    .service-text-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
      margin-bottom: 4rem;
    }
    
    .intro-text {
      font-size: 1.1rem;
    }
    
    .body-text {
      font-size: 0.95rem;
    }
  }
</style>

