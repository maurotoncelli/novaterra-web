---
// src/Components/Ui/Analytics.astro
// GA4 (Google Analytics) bootstrap.
// Enabled only when PUBLIC_GA_MEASUREMENT_ID is provided (e.g. "G-XXXXXXXXXX").
const gaId = import.meta.env.PUBLIC_GA_MEASUREMENT_ID as string | undefined;
const isValid = typeof gaId === 'string' && /^G-[A-Z0-9]+$/i.test(gaId);
---

{isValid && (
  <>
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}></script>
    <script is:inline>
      {`window.dataLayer = window.dataLayer || [];
function gtag(){dataLayer.push(arguments);}
gtag('js', new Date());
gtag('config', '${gaId}', { anonymize_ip: true });`}
    </script>
  </>
)}


