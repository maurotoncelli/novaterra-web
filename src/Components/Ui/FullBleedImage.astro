---
interface Props {
  src: string;
  alt: string;
  /** Target viewport height (used inside a clamp) */
  heightVh?: number;
  /** Tailwind classes for outer wrapper (e.g. my-32) */
  className?: string;
  /** Parallax speed factor (falls back to global default if omitted) */
  parallaxSpeed?: number;
  /** Browser loading behavior */
  loading?: "lazy" | "eager";
}

const {
  src,
  alt,
  heightVh = 54,
  className = "my-32",
  // Match the site's hero parallax feel more closely (still subtle).
  parallaxSpeed = 0.3,
  loading = "lazy",
} = Astro.props;
---

<div
  class={`w-full overflow-hidden relative ${className}`}
  style={`height: clamp(360px, ${heightVh}vh, 720px);`}
>
  <img
    src={src}
    alt={alt}
    loading={loading}
    decoding="async"
    class="w-full h-full object-cover parallax-img"
    data-speed={String(parallaxSpeed)}
    data-parallax-dir="up"
    sizes="100vw"
  />
</div>

