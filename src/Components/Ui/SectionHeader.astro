---
// src/Components/ui/SectionHeader.astro
interface Props {
  title: string;
  subtitle?: string;
  className?: string;
  align?: 'left' | 'center';
}

const { title, subtitle, className = '', align = 'center' } = Astro.props;

// Mappatura allineamento
const alignClass = align === 'left' ? 'text-left mx-0' : 'text-center mx-auto';
---

<div class={`max-w-[900px] mb-16 reveal-fx ${alignClass} ${className}`}>
  {subtitle && (
    <span class="block text-nova-accent text-[0.85rem] font-bold tracking-[0.2em] uppercase mb-4">
      {subtitle}
    </span>
  )}
  
  <!-- 
    TITOLO STANDARD NOVATERRA:
    Size: clamp(2rem, 4vw, 3.5rem) -> Fluido come la demo
    Weight: font-semibold (600) -> Non Bold (700) che era troppo pesante
    Line-height: 1.1
    Tracking: tight
  -->
  <h2 class="text-[clamp(2rem,4vw,3.5rem)] font-semibold leading-[1.1] tracking-tight text-white" set:html={title}></h2>
  
  <!-- Slot per eventuale testo descrittivo sotto al titolo -->
  <slot />
</div>