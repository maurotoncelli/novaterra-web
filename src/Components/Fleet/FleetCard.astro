---
// src/Components/Fleet/FleetCard.astro
import type { FleetCategory } from '../../data/fleetData';

interface Props {
  category: FleetCategory;
}

const { category } = Astro.props;
---

<div class="fleet-item">
  <div class="fleet-image">
    <img src={category.image} alt={category.title} loading="lazy" decoding="async" />
  </div>
  <div class="fleet-icon">{category.icon}</div>
  <h3 class="fleet-title">{category.title}</h3>
  <span class="fleet-spec">{category.spec}</span>
  <ul class="fleet-list">
    {category.uses.map((use) => (
      <li>{use}</li>
    ))}
  </ul>
</div>

<style>
  .fleet-item {
    background: var(--nova-bg);
    padding: 2.4rem 2rem 2.6rem 2rem;
    position: relative;
    transition: background 0.3s ease;
    display: flex;
    flex-direction: column;
  }
  
  .fleet-item:hover {
    background: rgba(255, 255, 255, 0.02);
  }
  
  .fleet-image {
    width: 100%;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: rgba(255, 255, 255, 0.02);
    margin-bottom: 1.25rem;
  }

  .fleet-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transform: scale(1.05);
    transition: transform 0.45s var(--ease-out-expo, cubic-bezier(0.19, 1, 0.22, 1));
    filter: brightness(0.85) contrast(1.05);
  }

  .fleet-item:hover .fleet-image img {
    transform: scale(1.12);
  }

  .fleet-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--nova-accent);
  }
  
  .fleet-title {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--nova-text);
    margin-bottom: 0.5rem;
  }
  
  .fleet-spec {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.5;
    margin-top: 1rem;
    display: block;
    font-weight: 600;
  }
  
  .fleet-list {
    list-style: none;
    margin-top: 1.5rem;
    color: var(--nova-muted);
    font-size: 0.9rem;
    line-height: 1.6;
  }
  
  .fleet-list li {
    position: relative;
    padding-left: 1rem;
    margin-bottom: 0.5rem;
  }
  
  .fleet-list li::before {
    content: 'â€¢';
    color: var(--nova-accent);
    position: absolute;
    left: 0;
    font-weight: 700;
  }
  
  @media (max-width: 768px) {
    .fleet-item {
      padding: 2rem 1.5rem 2.2rem 1.5rem;
    }
    
    .fleet-title {
      font-size: 1.1rem;
    }

    .fleet-image {
      margin-bottom: 1.1rem;
    }
  }
</style>



