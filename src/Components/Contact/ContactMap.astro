---
// src/Components/Contact/ContactMap.astro
import { contactInfo } from '../../data/contactData';
---

<div class="map-wrapper">
  <span class="subtitle">{contactInfo.map.title}</span>
  <div 
    id="contact-map" 
    class="contact-map"
    data-lat={contactInfo.map.coordinates.lat}
    data-lng={contactInfo.map.coordinates.lng}
    data-zoom={contactInfo.map.coordinates.zoom}
  >
    <div class="map-fallback" id="contact-map-fallback">
      <div class="map-fallback-inner">
        <div class="map-fallback-kicker">Mappa</div>
        <div class="map-fallback-title">Caricamento in corso…</div>
        <a
          class="map-fallback-link"
          href={`https://www.google.com/maps?q=${contactInfo.address.street}, ${contactInfo.address.city}`}
          target="_blank"
          rel="noopener noreferrer"
        >
          Apri su Google Maps →
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .map-wrapper {
    margin-top: 6rem;
    margin-bottom: 6rem;
    width: 100%;
  }
  
  .contact-map {
    position: relative;
    width: 100%;
    height: 450px;
    border: 1px solid var(--nova-line);
    margin-top: 2rem;
    border-radius: 10px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.02);
    box-shadow: 0 0 0 1px rgba(205, 92, 47, 0.06), 0 20px 50px rgba(0, 0, 0, 0.35);
  }

  /* Dark-theme tune for Leaflet UI */
  .contact-map :global(.leaflet-control-zoom a) {
    background: rgba(18, 17, 16, 0.9);
    color: var(--nova-text);
    border: 1px solid rgba(234, 232, 227, 0.15);
  }

  .contact-map :global(.leaflet-control-zoom a:hover) {
    border-color: rgba(205, 92, 47, 0.55);
    color: white;
  }

  .contact-map :global(.leaflet-control-attribution) {
    background: rgba(18, 17, 16, 0.7) !important;
    color: rgba(234, 232, 227, 0.75) !important;
    border-radius: 999px;
    margin: 10px !important;
    padding: 6px 10px !important;
    border: 1px solid rgba(234, 232, 227, 0.12);
  }

  .contact-map :global(.leaflet-control-attribution a) {
    color: rgba(234, 232, 227, 0.9) !important;
    text-decoration: none;
    border-bottom: 1px solid rgba(234, 232, 227, 0.25);
  }

  .map-fallback {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
    pointer-events: none;
    background:
      radial-gradient(circle at 30% 30%, rgba(205, 92, 47, 0.10), transparent 55%),
      radial-gradient(circle at 70% 70%, rgba(234, 232, 227, 0.06), transparent 55%),
      linear-gradient(180deg, rgba(18, 17, 16, 0.65), rgba(18, 17, 16, 0.85));
  }

  .map-fallback-inner {
    pointer-events: auto;
    text-align: center;
    padding: 1.25rem 1.5rem;
    border: 1px solid rgba(234, 232, 227, 0.14);
    background: rgba(18, 17, 16, 0.75);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    max-width: 520px;
    width: calc(100% - 2rem);
  }

  .map-fallback-kicker {
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    font-weight: 800;
    color: var(--nova-accent);
    margin-bottom: 0.5rem;
  }

  .map-fallback-title {
    color: var(--nova-text);
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .map-fallback-link {
    display: inline-block;
    color: var(--nova-text);
    text-decoration: none;
    border-bottom: 1px solid rgba(234, 232, 227, 0.25);
    padding-bottom: 3px;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    font-weight: 700;
    font-size: 0.8rem;
  }

  .map-fallback-link:hover {
    color: var(--nova-accent);
    border-color: rgba(205, 92, 47, 0.65);
  }
</style>

<script>
  import "../../scripts/contactMap";
</script>

