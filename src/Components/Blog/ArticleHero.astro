---
// src/Components/Blog/ArticleHero.astro
interface Props {
  title: {
    main: string;
    accent: string;
  };
  subtitle: string;
  image: string;
  backLink: string;
  date?: string;
  category?: string;
}

const { title, subtitle, image, backLink, date, category } = Astro.props;
---

<div class="article-hero" data-parallax-section="hero">
  <div 
    class="article-hero-bg parallax-img" 
    data-speed="0.5"
    data-parallax-dir="up"
    style={`background-image: url('${image}');`}
  ></div>
  
  <div class="article-hero-content">
    <a href={backLink} class="btn-back">
      ‚Üê Torna alle Notizie
    </a>
    <span class="subtitle text-white">{subtitle}</span>
    <h1 class="display-text text-white m-0">
      {title.main}<br>
      <span class="text-nova-accent">{title.accent}</span>.
    </h1>
  </div>
</div>

<style>
  .article-hero {
    position: relative;
    width: 100%;
    /* Match the standard site hero layout (PageHero) */
    height: auto;
    min-height: clamp(520px, 62vh, 760px);
    display: flex;
    align-items: flex-end;
    justify-content: center;
    overflow: hidden;
    background: var(--nova-bg);
    /* Keep hero text safely below fixed navbar while cover still goes behind it */
    padding-top: calc(var(--navbar-height) + 1.25rem);
    margin-bottom: 6rem;
  }

  /* Dark overlay matching site hue */
  .article-hero::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(18, 17, 16, 0.15);
    z-index: 2;
    pointer-events: none;
  }
  
  .article-hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    filter: brightness(0.65) contrast(1.08);
    z-index: 1;
    transform: scale(1.1);
    will-change: transform;
  }
  
  .article-hero-content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: var(--container-width, 1400px);
    margin: 0 auto;
    padding: 0 5vw 3rem 5vw;
  }
  
  .btn-back {
    display: inline-block;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: white;
    text-decoration: underline;
    text-underline-offset: 4px;
    margin-bottom: 2rem;
    transition: color 0.3s ease;
    cursor: pointer;
  }
  
  .btn-back:hover {
    color: var(--nova-accent);
  }
  
  .text-white { color: white; }
  .text-nova-accent { color: var(--nova-accent); }
  .m-0 { margin: 0; }
  
  @media (max-width: 768px) {
    .article-hero {
      height: auto;
      min-height: 60vh;
      padding-top: calc(var(--navbar-height) + 1rem);
      margin-bottom: 4rem;
    }
    
    .article-hero-content {
      padding-bottom: 3rem;
    }
  }
</style>

