---
import Layout from '../layouts/Layout.astro';

// Componenti Home
import Hero from '../Components/home/Hero.astro';
import IntroSection from '../Components/home/IntroSection.astro';
import TargetSection from '../Components/home/TargetSection.astro';
import MethodSection from '../Components/home/MethodSection.astro';
import Certifications from '../Components/home/Certifications.astro';
import Expectations from '../Components/home/Expectations.astro';
import AssetsAndServices from '../Components/home/AssetsAndServices.astro';
import HomeServices from '../Components/home/HomeServices.astro';
import HomeLatestProject from '../Components/home/HomeLatestProject.astro';
import Testimonials from '../Components/home/Testimonials.astro';
import ClientsMarquee from '../Components/home/ClientsMarquee.astro';
import FullBleedImage from '../Components/Ui/FullBleedImage.astro';
import { homeEmotionalStrips, homeEmotionalStripHeightVh } from '../data/homeContent';
---

<Layout title="Novaterra | Earth Engineering" showPreloader={true}>
	
	<Hero />

	<!-- CONTENUTI -->
	<IntroSection />

	<!-- Emotional full-width image (between Riccardo intro and services) -->
	<FullBleedImage
		src={homeEmotionalStrips.landscapeEngineering.src}
		alt={homeEmotionalStrips.landscapeEngineering.alt}
		heightVh={homeEmotionalStripHeightVh}
	/>

	<HomeServices />

	<HomeLatestProject />

	<TargetSection />

	<!-- Emotional full-width image (above “Il Processo”) -->
	<FullBleedImage
		src={homeEmotionalStrips.process.src}
		alt={homeEmotionalStrips.process.alt}
		heightVh={homeEmotionalStripHeightVh}
	/>

	<MethodSection />
	<Certifications />

	<!-- Emotional full-width image (above “Standard Operativo”) -->
	<FullBleedImage
		src={homeEmotionalStrips.standards.src}
		alt={homeEmotionalStrips.standards.alt}
		heightVh={homeEmotionalStripHeightVh}
	/>

	<Expectations />
	<AssetsAndServices />
	<Testimonials />
	<ClientsMarquee />

	<!-- CTA FINALE -->
	<section class="py-32 text-center relative z-10 border-t border-white/10">
		<a 
			href="/contatti" 
			class="inline-block py-[20px] px-[50px] border border-nova-accent text-nova-accent text-sm uppercase tracking-[0.2em] font-bold hover:bg-nova-accent hover:text-white transition-all duration-300"
		>
			CONTATTACI ORA
		</a>
	</section>

</Layout>
