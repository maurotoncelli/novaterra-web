---
// src/pages/contatti.astro
import PageTemplate from '../Components/Ui/PageTemplate.astro';
import ContactForm from '../Components/Contact/ContactForm.astro';
import ContactInfo from '../Components/Contact/ContactInfo.astro';
import ContactMap from '../Components/Contact/ContactMap.astro';
import { contactHero } from '../data/contactData';
---

<PageTemplate
  meta={{
    title: "Contatti | Novaterra - Earth Engineering",
    description:
      "Contatta NOVATERRA per preventivi e consulenze. Riccardo Toncelli, movimento terra in Toscana.",
    canonicalHref: "/contatti"
  }}
  hero={contactHero}
>
  <section class="contact-page">
    <!-- Grid 2 colonne: Info | Form -->
    <div class="contact-layout">
      <!-- Colonna Info -->
      <div>
        <span class="subtitle">Informazioni</span>
        <h2 class="section-title">Ci sentiamo. E poi si parte.</h2>
        <div class="contact-info-stack">
          <ContactInfo showHeading={false} />
        </div>
      </div>

      <!-- Colonna Form -->
      <div>
        <span class="subtitle">Richiesta</span>
        <h2 class="section-title">Raccontaci il progetto.</h2>
        <p class="contact-lead">
          Compila il modulo: ti rispondiamo rapidamente con una proposta chiara e operativa.
        </p>
        <ContactForm />
      </div>
    </div>

    <!-- Mappa -->
    <ContactMap />
  </section>
</PageTemplate>

<style>
  .contact-page {
    width: 100%;
  }

  .contact-lead {
    margin-top: 1.25rem;
    margin-bottom: 3rem;
    color: var(--nova-muted);
    line-height: 1.7;
    max-width: 42rem;
  }
  
  .contact-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 6rem;
  }

  .contact-info-stack {
    margin-top: 2.25rem;
  }
  
  @media (max-width: 768px) {
    .contact-info-stack {
      margin-top: 1.75rem;
    }

    .contact-lead {
      margin-bottom: 2.25rem;
    }

    .contact-layout {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }
</style>
